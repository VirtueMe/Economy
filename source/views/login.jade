// my-template.jade
extends layout

block head
  style
    body {
      padding-top: 40px;
      padding-bottom: 40px;
      background-color: #f5f5f5;
    }

    .form-signin {
      max-width: 300px;
      padding: 19px 29px 29px;
      margin: 0 auto 20px;
      background-color: #fff;
      border: 1px solid #e5e5e5;
      -webkit-border-radius: 5px;
         -moz-border-radius: 5px;
              border-radius: 5px;
      -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
         -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
              box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }
    .form-signin .form-signin-heading,
    .form-signin .checkbox {
      margin-bottom: 10px;
    }
    .form-signin input[type="text"],
    .form-signin input[type="password"] {
      font-size: 16px;
      height: auto;
      margin-bottom: 15px;
      padding: 7px 9px;
    }

block content
  div.container
    form(action="/login", method="post", class="form-signin")
      - if (message)
      p= message
      h2.form-signin-heading Please sign in
      input(type="text", name="username", value=user, class="input-block-level", placeholder="Email address")
      input(type="password", name="password", class="input-block-level", placeholder="Password")
      label.checkbox
        input(type="checkbox", value="remember-me") Remember me
      button(class="btn btn-large btn-primary", type="submit") Sign in
  script(type='text/javascript', src='/assets/js/require.js', data-main="/assets/js/config")
