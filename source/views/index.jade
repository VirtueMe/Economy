// my-template.jade
extends layout

block head
  style
    body {
      padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
    }
    
block content
  div.navbar.navbar-inverse.navbar-fixed-top
    div.navbar-inner
      div.container
        button(type="button", class="btn btn-navbar", data-toggle="collapse", data-target=".nav-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a(class="brand", href="#") Budsjett
        div.nav-collapse.collapse
          ul.nav
            li.active
              a(href="#", data-toggle="pill") Hjem
            li
              a(href="#about", data-toggle="pill") Om
            li
              a(href="#contact", data-toggle="pill") Kontakt
            li
              a(href="/logout") Logg Ut

  div.container
    h1 Budsjett Organisator
    p Dette er en fin måte å organisere systemet på.
  script(type='text/javascript', src='/assets/js/require.js', data-main="/assets/js/config")

